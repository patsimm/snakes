{
  "name": "snakes",
  "version": "0.0.1",
  "description": "Snakes Game",
  "main": "src/server/index.js",
  "author": "patrick.simmelbauer@gmail.com",
  "license": "MIT",
  "private": false,
  "jest": {
    "moduleNameMapper": {
      "\\.scss$": "<rootDir>/__mocks__/emptyModule.js"
    }
  },
  "scripts": {
    "develop": "concurrently \"nodemon .\" \"yarn build --watch\"",
    "build": "webpack",
    "start": "node .",
    "test": "yarn test:source && yarn test:socket",
    "test:socket": "cross-env PORT=8080 concurrently -k -s first \"yarn start\" \"wait-on http://localhost:8080/ && jest --testPathPattern=socket-test\"",
    "test:source": "jest --testPathPattern=src",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "immutable": "^3.8.2",
    "rxjs": "^5.5.10",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "canvas": "^1.6.10",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "extract-loader": "^2.0.1",
    "file-loader": "^1.1.11",
    "jest": "^22.4.3",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.3",
    "sass-loader": "^7.0.1",
    "socket.io-client": "^2.1.0",
    "supertest": "^3.0.0",
    "wait-on": "^2.1.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
